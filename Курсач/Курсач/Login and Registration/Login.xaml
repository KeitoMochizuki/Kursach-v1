<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Курсач.Login" BackgroundColor="Aquamarine">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Вход в систему" FontSize="30" TextColor="Black" />
            <Entry x:Name ="UserName" Placeholder="Логин" FontSize="30" TextColor="Black"/>
            <Entry x:Name ="Password" Placeholder="Пароль" FontSize="30" TextColor="Black" IsPassword="True"/>
            <Button Text="Подтвердить" TextColor="Black" Clicked="Button_Clicked"/>
            <Label Text="Нет аккаунта?" FontSize="15" TextColor="Black"/>
            <Button Text="Создать" TextColor="Black" Clicked="Button_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>